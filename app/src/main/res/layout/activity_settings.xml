<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="zeevox.soundrecorder.SettingsActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:id="@+id/dropdown_rec_bitrate_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dropdown_rec_bitrate_title"
            android:layout_weight="1.0" />

        <Spinner
            android:id="@+id/dropdown_rec_bitrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:entries="@array/dropdown_rec_bitrate_list"
            android:prompt="@string/dropdown_rec_bitrate_title"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:id="@+id/dropdown_rec_format_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/dropdown_rec_format_title"
            android:layout_weight="1.0" />

        <Spinner
            android:id="@+id/dropdown_rec_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            android:entries="@array/dropdown_rec_format_list"
            android:prompt="@string/dropdown_rec_format_title" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recording_settings_reset"
            android:id="@+id/settings_reset" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recording_settings_save"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:id="@+id/settings_save"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</LinearLayout>
